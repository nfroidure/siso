{
  "name": "siso",
  "version": "2.2.0",
  "description": "siso is a routing utility allowing to map a path to a value",
  "main": "dist/index.js",
  "engines": {
    "node": ">=6.9.5"
  },
  "metapak": {
    "data": {
      "files": "src/*.js",
      "testsFiles": "src/*.test.js",
      "ignore": [
        "dist"
      ]
    },
    "configs": [
      "jsdocs",
      "jsarch",
      "readme",
      "travis",
      "eslint",
      "codeclimate",
      "jest",
      "babel"
    ]
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "architecture": "jsarch src/*.js > ARCHITECTURE.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "compile": "babel src --out-dir=dist",
    "cover": "npm run jest -- --coverage",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "echo \"# API\" > API.md; jsdoc2md src/*.js >> API.md",
    "jest": "NODE_ENV=test jest",
    "lint": "eslint src/*.js",
    "metapak": "metapak",
    "mocha": "mocha --compilers js:babel-register src/*.mocha.js",
    "prepublish": "npm run compile",
    "prettier": "prettier --write src/*.js",
    "preversion": "npm t && npm run lint && npm run metapak -s && npm run compile",
    "test": "npm run jest",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfroidure/siso.git"
  },
  "keywords": [
    "path",
    "router",
    "value"
  ],
  "author": "Nicolas Froidure",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nfroidure/siso/issues"
  },
  "homepage": "https://github.com/nfroidure/siso#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^9.0.0",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "commitizen": "^2.10.1",
    "conventional-changelog-cli": "^2.0.5",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.6.0",
    "eslint-plugin-prettier": "^2.6.2",
    "jest": "^23.6.0",
    "jsarch": "^1.3.0",
    "jsdoc-to-markdown": "^3.1.0-0",
    "metapak": "^1.0.3",
    "metapak-nfroidure": "^6.3.0",
    "prettier": "^1.14.2",
    "sinon": "^6.3.3"
  },
  "dependencies": {
    "debug": "^4.0.1",
    "es6-symbol": "^3.1.1",
    "regexp-tpl": "^2.0.0",
    "yerror": "^2.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "greenkeeper": {
    "ignore": [
      "commitizen",
      "cz-conventional-changelog",
      "conventional-changelog-cli",
      "jsdoc-to-markdown",
      "jsarch",
      "eslint",
      "eslint-config-prettier",
      "prettier",
      "jest",
      "coveralls"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "6.9.5"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  }
}
